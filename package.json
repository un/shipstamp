{
  "name": "shipstamp",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@convex-dev/better-auth": "0.10.10",
    "better-auth": "1.4.9",
    "convex": "^1.31.7"
  },
  "devDependencies": {
    "shipstamp": "workspace:*",
    "@types/node": "^22.13.4",
    "concurrently": "^9.1.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "dev": "concurrently -n convex,web -c cyan,magenta \"bun run dev:convex\" \"bun run dev:web\"",
    "dev:web": "bun --filter web dev",
    "dev:convex": "bun run convex:dev",
    "build": "bun --workspaces --if-present run build",
    "typecheck": "bun --workspaces --if-present run typecheck",
    "lint": "bun --workspaces --if-present run lint",
    "test": "bun --workspaces --if-present run test",
    "convex:codegen": "bun x convex codegen",
    "convex:dev": "bun x convex dev"
  }
}
